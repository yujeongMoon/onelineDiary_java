<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity.NewDiaryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/today_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2021년 9월 10일"
                android:textSize="@dimen/diary_date_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/diary_margin_top"
                android:layout_marginStart="@dimen/diary_margin_start"/>

            <ImageView
                android:id="@+id/current_weather"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/weather_rain"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/photo"
                android:layout_marginTop="@dimen/diary_margin_top"
                android:layout_marginEnd="@dimen/main_margin_end"
                android:layout_marginBottom="20dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/current_location"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/diary_margin_top"
                android:layout_marginStart="@dimen/diary_margin_start"
                android:ellipsize="end"
                android:textSize="15dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/today_date"
                tools:text="강남대로 327" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintDimensionRatio="H, 10:8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/current_location"
                android:layout_marginTop="30dp"
                android:clipToPadding="false"
                android:clipChildren="false"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/photo"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"/>

            <EditText
                android:id="@+id/diary_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/indicator"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/diary_margin_start"
                android:layout_marginEnd="@dimen/diary_margin_end"
                android:inputType="text|textMultiLine"
                android:textSize="@dimen/diary_contents_text"
                android:hint="@string/new_diary_contents_hint"
                android:importantForAutofill="no" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/emoji_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/diary_contents"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/diary_margin_start"
                android:layout_marginEnd="@dimen/diary_margin_end"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:id="@+id/emoji_happy_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/emoji_happy_check"
                        android:layout_width="@dimen/diary_select_check_width"
                        android:layout_height="@dimen/diary_select_check_height"
                        android:layout_marginBottom="@dimen/diary_select_interval"
                        android:src="@drawable/check_icon"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/emoji_happy"
                        android:layout_width="@dimen/diary_select_emoji_width"
                        android:layout_height="@dimen/diary_select_emoji_height"
                        android:src="@drawable/emoji_happy_icon"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/emoji_smile_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/emoji_smile_check"
                        android:layout_width="@dimen/diary_select_check_width"
                        android:layout_height="@dimen/diary_select_check_height"
                        android:layout_marginBottom="@dimen/diary_select_interval"
                        android:src="@drawable/check_icon"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/emoji_smile"
                        android:layout_width="@dimen/diary_select_emoji_width"
                        android:layout_height="@dimen/diary_select_emoji_height"
                        android:src="@drawable/emoji_blushing_icon"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/emoji_blank_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/emoji_blank_check"
                        android:layout_width="@dimen/diary_select_check_width"
                        android:layout_height="@dimen/diary_select_check_height"
                        android:layout_marginBottom="@dimen/diary_select_interval"
                        android:src="@drawable/check_icon"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/emoji_blank"
                        android:layout_width="@dimen/diary_select_emoji_width"
                        android:layout_height="@dimen/diary_select_emoji_height"
                        android:src="@drawable/emoji_blank_icon"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/emoji_sad_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/emoji_sad_check"
                        android:layout_width="@dimen/diary_select_check_width"
                        android:layout_height="@dimen/diary_select_check_height"
                        android:layout_marginBottom="@dimen/diary_select_interval"
                        android:src="@drawable/check_icon"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/emoji_sad"
                        android:layout_width="@dimen/diary_select_emoji_width"
                        android:layout_height="@dimen/diary_select_emoji_height"
                        android:src="@drawable/emoji_consoling_icon"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/emoji_nervous_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/emoji_nervous_check"
                        android:layout_width="@dimen/diary_select_check_width"
                        android:layout_height="@dimen/diary_select_check_height"
                        android:layout_marginBottom="@dimen/diary_select_interval"
                        android:src="@drawable/check_icon"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/emoji_nervous"
                        android:layout_width="@dimen/diary_select_emoji_width"
                        android:layout_height="@dimen/diary_select_emoji_height"
                        android:src="@drawable/emoji_nervous_icon"/>

                </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="saveNewDiary">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save"
            android:textSize="@dimen/button_text"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="@dimen/button_padding"
            android:paddingBottom="@dimen/button_padding"
            android:background="#ffb6c1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>