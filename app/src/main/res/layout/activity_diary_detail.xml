<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity.DiaryDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/detail_button_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/detail_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/diary_margin_top"
                android:layout_marginStart="@dimen/diary_margin_start"
                android:layout_marginEnd="@dimen/diary_margin_end">

                <TextView
                    android:id="@+id/detail_today_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:text="2021년 9월 10일"
                    android:textSize="@dimen/diary_date_text"/>

                <androidx.legacy.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_edit_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/diary_edit_mode_switch_height"
                    android:text="@string/edit_mode_title"
                    android:textSize="@dimen/diary_editmode_text"/>

            </LinearLayout>

            <TextView
                android:id="@+id/detail_current_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/detail_toolbar_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                tools:text="강남대로 327"
                android:textSize="15dp"
                android:visibility="gone"/>

            <com.example.onelinediary.custom.DoubleCancelImageView
                android:id="@+id/detail_photo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H, 10:8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_current_location"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/diary_margin_start"
                android:layout_marginEnd="@dimen/diary_margin_end"
                android:src="@drawable/default_placeholder_image"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@color/white"/>

            <LinearLayout
                android:id="@+id/detail_contents_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/detail_photo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/detail_emoji_layout"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/diary_margin_start"
                android:layout_marginEnd="@dimen/diary_margin_end"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:id="@+id/detail_emoji"
                    android:layout_width="@dimen/detail_emoji_width"
                    android:layout_height="@dimen/detail_emoji_height"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="top"
                    android:src="@drawable/emoji_blank_icon"
                    android:visibility="visible"/>

                <EditText
                    android:id="@+id/edit_detail_diary_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textMultiLine"
                    android:layout_gravity="center"
                    android:textSize="@dimen/diary_contents_text"
                    android:hint="@string/new_diary_contents_hint"
                    android:importantForAutofill="no"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/text_detail_diary_contents_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/text_detail_diary_contents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/diary_contents_text"
                        tools:text="상세 화면"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/black"
                        android:layout_marginTop="3dp"/>

                </LinearLayout>


            </LinearLayout>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/detail_emoji_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_contents_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/diary_margin_start"
                android:layout_marginEnd="@dimen/diary_margin_end"
                android:layout_marginBottom="30dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/emoji_happy_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/emoji_happy_check"
                        android:layout_width="@dimen/diary_select_check_width"
                        android:layout_height="@dimen/diary_select_check_height"
                        android:layout_marginBottom="@dimen/diary_select_interval"
                        android:src="@drawable/check_icon"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/emoji_happy"
                        android:layout_width="@dimen/diary_select_emoji_width"
                        android:layout_height="@dimen/diary_select_emoji_height"
                        android:src="@drawable/emoji_happy_icon"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/emoji_smile_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/emoji_smile_check"
                        android:layout_width="@dimen/diary_select_check_width"
                        android:layout_height="@dimen/diary_select_check_height"
                        android:layout_marginBottom="@dimen/diary_select_interval"
                        android:src="@drawable/check_icon"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/emoji_smile"
                        android:layout_width="@dimen/diary_select_emoji_width"
                        android:layout_height="@dimen/diary_select_emoji_height"
                        android:src="@drawable/emoji_blushing_icon"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/emoji_blank_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/emoji_blank_check"
                        android:layout_width="@dimen/diary_select_check_width"
                        android:layout_height="@dimen/diary_select_check_height"
                        android:layout_marginBottom="@dimen/diary_select_interval"
                        android:src="@drawable/check_icon"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/emoji_blank"
                        android:layout_width="@dimen/diary_select_emoji_width"
                        android:layout_height="@dimen/diary_select_emoji_height"
                        android:src="@drawable/emoji_blank_icon"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/emoji_sad_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/emoji_sad_check"
                        android:layout_width="@dimen/diary_select_check_width"
                        android:layout_height="@dimen/diary_select_check_height"
                        android:layout_marginBottom="@dimen/diary_select_interval"
                        android:src="@drawable/check_icon"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/emoji_sad"
                        android:layout_width="@dimen/diary_select_emoji_width"
                        android:layout_height="@dimen/diary_select_emoji_height"
                        android:src="@drawable/emoji_consoling_icon"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/emoji_nervous_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/emoji_nervous_check"
                        android:layout_width="@dimen/diary_select_check_width"
                        android:layout_height="@dimen/diary_select_check_height"
                        android:layout_marginBottom="@dimen/diary_select_interval"
                        android:src="@drawable/check_icon"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/emoji_nervous"
                        android:layout_width="@dimen/diary_select_emoji_width"
                        android:layout_height="@dimen/diary_select_emoji_height"
                        android:src="@drawable/emoji_nervous_icon"/>

                </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/detail_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:onClick="editDiary">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/edit"
            android:textSize="@dimen/button_text"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="@dimen/button_padding"
            android:paddingBottom="@dimen/button_padding"
            android:background="@color/purple_200"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>