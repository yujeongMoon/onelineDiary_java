<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.FeedbackActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feedback_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#ccffe4e1"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/feedback_contents"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="text|textNoSuggestions|textMultiLine"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/btn_send_feedback"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="전송"
            android:textSize="13dp"
            android:textStyle="bold"
            android:gravity="center"
            android:backgroundTint="@color/col_main"
            android:background="@drawable/bg_btn_send_message"/>

    </LinearLayout>

</LinearLayout>